{% block body %}
<row>
    <columns>
        <h1>Annulation d'atelier</h1>
        <div class='cancel workshop'>
            <img src="{{ email.image('@images/cancel-calendar.png') }}" alt="logo calendrier annulé">
        </div>
        <p>Bonjour <strong>{{ email.to[0].address }}</strong> !</p>
